<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/header') %>
    <title>New Book</title>
  </head>
  <body>
    <%- include('partials/navigation') %>

    <div class="container p-4">
      <form method="POST" action="/new-entry" class="card card-body">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            class="form-control"
            type="text"
            name="title"
            id="title"
            placeholder="Entry new title"
            autofocus
            required
          />
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          <input
            class="form-control"
            type="text"
            name="author"
            id="author"
            placeholder="Entry new author"
            required
          />
        </div>
        <div class="form-group">
          <label for="image">Images</label>
          <input
            class="form-control"
            type="text"
            name="image"
            id="image"
            placeholder="http://website.com"
            autofocus
            required
          />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            name="description"
            id="description"
            rows="2"
            class="form-control"
            required
          ></textarea>
        </div>
        <input type="submit" value="Save Book" class="btn btn-primary" />
      </form>
    </div>
  </body>
</html>
